@{
    Layout = null;
}
    <h2>Tag</h2>
        <div class="form-horizontal">
            <ul id="validationSummary"></ul>
            Are you sure that you want to delete {{Tag}}?
            <div class="form-group">
                <label for="Name" class = "control-label col-md-2">
                Name
                </label>
                <div class="col-md-10">
                    {{data.Name}}
                </div>
            </div>
    
            <div class="form-group">
                <label for="Users" class = "control-label col-md-2">
                 Users
                </label>
                <div class="col-md-10">
                    {{data.Users_Count}}
                </div>
            </div>
    
            <div class="form-group">
                <label for="Category" class = "control-label col-md-2">
                 Category
                </label>
                <div class="col-md-10">
                    {{data.Category_Name}}
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" ng-click="save()" />
                </div>
            </div>
        </div>
    
    <div>
        <a href="#/Tag">Back to List</a>
    </div>
