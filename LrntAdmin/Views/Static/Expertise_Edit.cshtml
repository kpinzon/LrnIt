@{
    Layout = null;
}
    <h2>Expertise</h2>
    <form name="theForm">
        <div class="form-horizontal">
            <ul id="validationSummary"></ul>
            <div class="form-group">
                <label for="Name" class = "control-label col-md-2"> Name </label>
                <div class="col-md-10">
                    <input type="text" ng-model="data.Name" id="Name"  class="form-control"/>
                    <div id="validation_for_Name"></div>
                </div>
            </div>
    
            <div class="form-group">
                <label for="Description" class = "control-label col-md-2"> Description </label>
                <div class="col-md-10">
                    <input type="text" ng-model="data.Description" id="Description"  class="form-control"/>
                    <div id="validation_for_Description"></div>
                </div>
            </div>
    
            <div class="form-group">
                <label for="YearsExperience" class = "control-label col-md-2"> YearsExperience </label>
                <div class="col-md-10">
                    <input type="text" ng-model="data.YearsExperience" id="YearsExperience"  class="form-control"/>
                    <div id="validation_for_YearsExperience"></div>
                </div>
            </div>
    
            <div class="form-group">
                <label for="UserId" class = "control-label col-md-2"> User </label>
                <div class="col-md-10">
                    <select ng-model="data.UserId" id="UserId"  class="form-control"
                            ng-options="option.Id as option.Name for option in UserId_options">
                        <option value="">-- choose User --</option>
                    </select>
                    <div id="validation_for_UserId"></div>
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="button" value="Save" class="btn btn-default" ng-click="save()" />
                </div>
            </div>
        </div>
    </form>
    
    <div>
        <a href="#/Expertise">Back to List</a>
    </div>
